@{
    ViewData["Title"] = "Delete Quote";
}
@model Quote

<h2>Confirm Deletion</h2>
<h3>Are you sure that you want to delete @Model.QuoteText by @Model.Author?</h3>
@*confirm if the user wants to delete the quote or not*@
<form method="post" asp-controller="Home" asp-action="Delete">
    <button type="submit">Delete</button>
    <a asp-controller="Home" asp-action="index" class="btn btn-primary">Cancel</a>
    <input type="hidden" asp-for="QuoteId" />
</form>